if(empty($id) and empty($obj->action)){
	if(empty($_GET['edit'])){
		
		$plots = new Plots();
		$fields=" (max(id)+1) code ";
		$join="";
		$having="";
		$groupby="";
		$orderby="";
		$plots->retrieve($fields,$join,$where,$having,$groupby,$orderby);
		$ob=$plots->fetchObject;
		if(empty($ob->code))
			$ob->code=1;
		
		$ob->code = str_pad($ob->code, 4, 0, STR_PAD_LEFT);
		
		$obj->code="PLT".$ob->code;
		
		$obj->action="Save";
	}
	else{
		$obj=$_SESSION['obj'];
	}
	$obj->vatable="No";
