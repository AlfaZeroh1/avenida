	if(mysql_affected_rows()>0){
		$obj->actionplotpaymentdetail="Update Plotpaymentdetail";
	}
	else{
		$obj->actionplotpaymentdetail="Add Plotpaymentdetail";
	}
	$merge=$plotpaymentdetails->fetchObject;

	$obj = (object) array_merge((array) $obj, (array) $merge);
	$obj->plotid=$id;
	$obj->id=$id;
	//for autocompletes
	$landlords = new Landlords();
