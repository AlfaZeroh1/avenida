if($obj->action=="Save"){
	$plots=new Plots();
	$obj->createdby=$_SESSION['userid'];
	$obj->createdon=date("Y-m-d H:i:s");
	$obj->lasteditedby=$_SESSION['userid'];
	$obj->lasteditedon=date("Y-m-d H:i:s");
	$error=$plots->validate($obj);
	if(!empty($error)){
		$error=$error;
	}
	else{
		$plots=$plots->setObject($obj);
		if($plots->add($plots)){
			$error=SUCCESS;
			redirect("addplots_proc.php?id=".$plots->id."&error=".$error);
		}
		else{
			$error=FAILURE;
		}
	}
}
	
if($obj->action=="Update"){
	$plots=new Plots();
	$obj->lasteditedby=$_SESSION['userid'];
	$obj->lasteditedon=date("Y-m-d H:i:s");

	$error=$plots->validate($obj);
	if(!empty($error)){
		$error=$error;
	}
	else{
		$plots=$plots->setObject($obj);
		if($plots->edit($plots)){
			$error=UPDATESUCCESS;
			redirect("addplots_proc.php?id=".$plots->id."&error=".$error."#tabs-1");
		}
		else{
			$error=UPDATEFAILURE;
		}
	}
}

