if($obj->action=="Adjust Rent"){
	//retrieve all houses under plot and change rent amounts
	$houses  = new Houses();
	$fields="*";
	$having="";
	$groupby="";
	$orderby="";
	$where=" where plotid='$obj->id' ";
	$houses->retrieve($fields, $join, $where, $having, $groupby, $orderby);
	while($row=mysql_fetch_object($houses->result)){
		$ob->houseid=$row->id;
		$ob->createdby=$_SESSION['userid'];
		$ob->createdon=date("Y-m-d H:i:s");
		$ob->lasteditedby=$_SESSION['userid'];
		$ob->lasteditedon=date("Y-m-d H:i:s");
		
		$ob->previous=$row->amount;
		$ob->enddate=$obj->plotrentsenddate;
		
		if($obj->plotrentsincreasetype=="perc")			
			$ob->current=$row->amount*(100+$obj->plotrentsvalue)/100;
		else
			$ob->current=$row->amount+$obj->plotrentsvalue;
		
		//add to house rents
		$houses = new Houses();
		$fields="*";
		$having="";
		$groupby="";
		$orderby="";
		$where=" where id='row->id'";
		$houses->retrieve($fields, $join, $where, $having, $groupby, $orderby);
		$houses = $houses->fetchObject;
		$houses->amount=$ob->current;
		
		$hse = new Houses();
		$hse->edit($houses);
		
		$houserents = new Houserents();
		$houserents->add($ob);
	}
}
