<?php
$plots=new Plots();
		$i=0;
		$fields="em_plots.id as pid, em_plots.code,em_plots.name as name, count(em_houses.id) as vacantid";
		$join="left join em_houses on em_houses.plotid=em_plots.id";
		$having="";
		$groupby=" group by em_plots.id";
		$orderby=" order by name ";
		$where=" where em_houses.rentalstatusid=2";
		$plots->retrieve($fields,$join,$where,$having,$groupby,$orderby);
		$res=$plots->result;
		while($row=mysql_fetch_object($res)){
			session_start();
			
			$i++;
				?>
                <tr>
                <td><?php echo $i; ?></td>
			<td><a href="nyumba.php?pid=<?php echo $row->pid; ?>&tenantid=<?php echo $_GET['tenantid'];?>"><?php echo $row->name; ?></a> </td>
			<td>(<?php echo $row->vacantid;?>)</td>
                
</tr>
                
<?php }?>
