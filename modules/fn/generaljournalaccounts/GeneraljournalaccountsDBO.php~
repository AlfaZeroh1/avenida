<?php 
require_once("../../../DB.php");
class GeneraljournalaccountsDBO extends DB{
	var $fetchObject;
	var $sql;
	var $id;
	var $result;
	var $affectedRows;
 var $table="fn_generaljournalaccounts";

	function persist($obj){
		$sql="insert into fn_generaljournalaccounts(id,refid,name,acctypeid,categoryid,debit,credit,createdby,createdon,lasteditedby,lasteditedon)
						values('$obj->id','$obj->refid','$obj->name','$obj->acctypeid','$obj->categoryid','$obj->debit','$obj->credit','$obj->createdby','$obj->createdon','$obj->lasteditedby','$obj->lasteditedon')";		
		$this->sql=$sql;
		if(mysql_query($sql,$this->connection)){		
			$this->id=mysql_insert_id();
			return true;	
		}		
	}		
 
	function update($obj,$where=""){			
		if(empty($where)){
			$where="id='$obj->id'";
		}
		$sql="update fn_generaljournalaccounts set refid='$obj->refid',name='$obj->name',acctypeid='$obj->acctypeid',categoryid='$obj->categoryid',debit='$obj->debit',credit='$obj->credit',lasteditedby='$obj->lasteditedby',lasteditedon='$obj->lasteditedon' where $where ";
		$this->sql=$sql;
		if(mysql_query($sql,$this->connection)){		
			return true;	
		}
	}			
 
	function delete($obj,$where=""){			
		if(empty($where)){
			$where=" where id='$obj->id' ";
		}
		$sql="delete from fn_generaljournalaccounts $where ";
		$this->sql=$sql;
		if(mysql_query($sql,$this->connection))		
				return true;	
	}			
 
	function retrieve($fields,$join,$where,$having,$groupby,$orderby){			
		$sql="select $fields from fn_generaljournalaccounts $join $where $groupby $having $orderby"; 
 		$this->sql=$sql;
		$this->result=mysql_query($sql,$this->connection);
		$this->affectedRows=mysql_affected_rows();
		$this->fetchObject=mysql_fetch_object(mysql_query($sql,$this->connection));
	}			
}			
?>

